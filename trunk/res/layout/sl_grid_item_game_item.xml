<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical">

	<ImageView
	    android:id="@+id/sl_icon"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_gravity="center_vertical"
	    android:layout_marginBottom="7dp"
	    android:src="@drawable/sl_icon_shop" />

	<LinearLayout
	    android:layout_height="wrap_content"
	    android:layout_width="0dip"
	    android:layout_margin="7dp"
	    android:layout_weight="1"
	    android:layout_gravity="top"
	    android:orientation="vertical" >

		<TextView android:id="@+id/sl_title" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:singleLine="true"
			android:ellipsize="marquee" android:layout_marginLeft="5dp"
			style="@style/sl_text_normal_bold" />

		<TextView
		    android:id="@+id/sl_subtitle"
		    style="@style/sl_text_normal_normal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dp"
		    android:ellipsize="marquee"
		    android:maxLines="3"
	    />

	</LinearLayout>

	<LinearLayout
	    android:id="@+id/sl_buy_button"
	    android:layout_width="75dp"
	    android:layout_height="68dp"
	    android:layout_marginTop="8dp"
	    android:layout_marginBottom="4dp"
	    android:background="@drawable/sl_button_buy"
	    android:orientation="vertical" >

		<TextView
		    android:id="@+id/sl_price_header"
		    style="@style/sl_text_small_normal_inverted"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="left"
		    android:padding="0dp"
		    android:layout_margin="0dp" />
		
		<TextView
		    android:id="@+id/sl_price"
		    style="@style/sl_text_normal_bold_inverted"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:padding="0dp"
		    android:layout_margin="0dp"
		    android:ellipsize="end"
		    android:singleLine="true"/>

	</LinearLayout>

</LinearLayout>
