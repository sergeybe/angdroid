<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/sl_selector_list_item">

	<com.scoreloop.client.android.ui.component.base.RoundCornerImageView android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_margin="@dimen/sl_margin_default"
		android:layout_gravity="center_vertical"
		android:id="@+id/sl_icon"
		android:src="@drawable/sl_icon_user"/>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:orientation="vertical">
	
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sl_title"
			android:singleLine="true"
			android:ellipsize="marquee"
			style="@style/sl_text_normal_bold"/>
			
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sl_subtitle"
			android:singleLine="true"
			android:ellipsize="marquee"
			style="@style/sl_text_normal_normal"/>
			
	</LinearLayout>
	
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:id="@+id/sl_subtitle2"
		android:layout_margin="@dimen/sl_margin_default"
		android:singleLine="true"
		android:ellipsize="marquee"
		style="@style/sl_text_normal_normal"/>

</LinearLayout>
