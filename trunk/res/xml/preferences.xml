		  <org.angdroid.angband.KeyMapPreference android:key="angband.ykey" android:title="Y"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.zkey" android:title="Z"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.0key" android:title="0"/>
