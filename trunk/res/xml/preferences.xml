		  <org.angdroid.angband.KeyMapPreference android:key="angband.9key" android:title="9"/>
		</PreferenceScreen>
		<PreferenceScreen
			android:title="Modifiers and Movers"
			android:summary="Esc, Ctrl, Shift, Alt, Space, Enter, Directions">	  
		  <org.angdroid.angband.KeyMapPreference android:key="angband.downkey" android:title="Arrow Down"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.leftkey" android:title="Arrow Left"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.rightkey" android:title="Arrow Right"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.upkey" android:title="Arrow Up"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.bkspacekey" android:title="Backspace"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.ctrlkey" android:title="Control Key"/> 
		  <org.angdroid.angband.KeyMapPreference android:key="angband.enterkey" android:title="Enter Key"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.esckey" android:title="Esc Key"/> 
		  <org.angdroid.angband.KeyMapModPreference android:key="angband.laltkey" android:title="Left Alt/Fn Key"/>
		  <org.angdroid.angband.KeyMapModPreference android:key="angband.lshiftkey" android:title="Left Shift Key"/>
		  <org.angdroid.angband.KeyMapModPreference android:key="angband.raltkey" android:title="Right Alt/Fn Key"/>
		  <org.angdroid.angband.KeyMapModPreference android:key="angband.rshiftkey" android:title="Right Shift Key"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.spacekey" android:title="Space"/>
		</PreferenceScreen>
		<PreferenceScreen
			android:title="Symbols"
			android:summary="Punctuation and other non-alpha numeric keys">	  
		  <org.angdroid.angband.KeyMapPreference android:key="angband.astkey" android:title="Asterisk *"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.atkey" android:title="At @"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.bslashkey" android:title="Back Slash \\"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.colonkey" android:title="Colon :"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.commakey" android:title="Comma ,"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.dollarkey" android:title="Dollar $"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.dquotekey" android:title="Double Quote &quot;"/>
