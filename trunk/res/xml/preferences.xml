		  <org.angdroid.angband.KeyMapPreference android:key="angband.lkey" android:title="L"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.mkey" android:title="M"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.nkey" android:title="N"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.okey" android:title="O"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.pkey" android:title="P"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.qkey" android:title="Q"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.rkey" android:title="R"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.skey" android:title="S"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.tkey" android:title="T"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.ukey" android:title="U"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.vkey" android:title="V"/>
