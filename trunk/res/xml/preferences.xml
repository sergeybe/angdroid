		  <org.angdroid.angband.KeyMapPreference android:key="angband.percentkey" android:title="Percent %"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.periodkey" android:title="Period ."/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.pipekey" android:title="Pipe |"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.pluskey" android:title="Plus +"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.poundkey" android:title="Pound #"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.questkey" android:title="Question ?"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.rbkey" android:title="Right Brace ]"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.rckey" android:title="Right Curly }"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.rpkey" android:title="Right Paren )"/>	
		  <org.angdroid.angband.KeyMapPreference android:key="angband.scolonkey" android:title="Semicolon ;"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.squotekey" android:title="Single Quote '"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.tildekey" android:title="Tilde ~"/>
		  <org.angdroid.angband.KeyMapPreference android:key="angband.underkey" android:title="Underscore _"/>
		</PreferenceScreen>
		<ListPreference
		   android:title="Ctrl Key Double-Tap"
		   android:summary="Double tap function for hardware button mapped to the Ctrl Key function"
		   android:key="angband.ctrldoubletap"
		   android:defaultValue="EnterKey"
		   android:entries="@array/virtKeyActionDescriptions"
		   android:entryValues="@array/virtKeyActions"/>
		<org.angdroid.angband.KeyMapResetPreference 
		   android:key="angband.resetallkeys" 
		   android:title="Reset all hardware keys"
		   android:summary="Restores all key mappings back to the default configuration"/> 
		</PreferenceScreen>
	  <CheckBoxPreference 
		 android:key="angband.portraitkb"
		 android:title="@string/preferences_portraitkb_title"
		 android:summary="@string/preferences_portraitkb_summary"
		 android:defaultValue="true"/>
	  <CheckBoxPreference 
		 android:key="angband.landscapekb"
		 android:title="@string/preferences_landscapekb_title"
		 android:summary="@string/preferences_landscapekb_summary"
		 android:defaultValue="false"/>
	  <CheckBoxPreference 
		 android:key="angband.enabletouch"
		 android:defaultValue="true" 
		 android:title="@string/preferences_enabletouch_title"
		 android:summary="@string/preferences_enabletouch_summary" />
	  <CheckBoxPreference 
		 android:key="angband.alwaysrun"
		 android:defaultValue="true" 
		 android:title="@string/preferences_alwaysrun_title"
		 android:summary="@string/preferences_alwaysrun_summary" 
		 android:dependency="angband.enabletouch" />
	  <ListPreference
		 android:title="Center screen tap"
		 android:summary="Select functionality for center screen tap"
		 android:key="angband.centerscreentap"
		 android:defaultValue="Space"
		 android:dependency="angband.enabletouch"
		 android:entries="@array/virtKeyActionDescriptions"
		 android:entryValues="@array/virtKeyActions"/>
	</PreferenceCategory>
</PreferenceScreen>
