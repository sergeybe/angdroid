	<style name="sl_list_view">
		<item name="android:fadingEdge">none</item>
		<item name="android:divider">@color/sl_color_divider</item>
		<item name="android:dividerHeight">1px</item> <!--  use px here in order to avoid artefacts -->
		<item name="android:headerDividersEnabled">false</item>
		<item name="android:footerDividersEnabled">true</item>
	</style>

	<style name="sl_dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowContentOverlay">@null</item>
