<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:gravity="center_horizontal" android:layout_margin="@dimen/sl_margin_default"
              android:orientation="vertical" android:background="@drawable/sl_dialog_background">

    <TextView android:id="@+id/sl_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:singleLine="true"
        style="@style/sl_text_large_bold_inverted"/>

    <TextView android:id="@+id/sl_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:layout_margin="@dimen/sl_margin_default"
              android:singleLine="false"
              style="@style/sl_text_normal_bold_inverted"/>


    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="10dp">

            <Button android:id="@+id/sl_button_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sl_clickable_height"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/sl_dialog_button_background_selector"
                    style="@style/sl_text_big_bold_inverted"
                    android:text="@string/sl_ok"/>

            <Button android:id="@+id/sl_button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sl_clickable_height"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/sl_dialog_button_background_selector"
                    style="@style/sl_text_big_bold_inverted"
                    android:text="@string/sl_cancel"/>

        </LinearLayout>

    </LinearLayout>
